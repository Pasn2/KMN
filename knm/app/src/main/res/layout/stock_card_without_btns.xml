<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="110dp"
    android:translationX="5dp"
    android:translationY="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/MyProfileStockCardView"
        android:layout_width="159dp"
        android:layout_height="98dp"
        app:cardElevation="5dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/MyProfileDescryptionStockCardText"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:text="x300 Stocks"
            android:textAlignment="center"
            android:translationX="0dp"
            android:translationY="80dp" />

        <TextView
            android:id="@+id/MyProfilePLStockCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P/L -3000 USD"
            android:translationX="0dp"
            android:translationY="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/MyProfileStockCardName"
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:text="KGHM"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/MyProfilePriceStockCardText"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:text="30000 USD/Stock"
                android:textAlignment="textEnd"
                android:translationY="-5dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>